<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.demo.dao.UserDao">

    <!--查询用户名和密码-->
    <select id="findByUsernameAndPassword" resultType="com.demo.entity.User">
        select * from demo.t_user
        where username = #{username} and password = #{password};
    </select>

    <update id="updatePassword">
        update demo.t_user set password = #{password}
        where username = #{username};
    </update>


    <delete id="deleteUser">
        delete from demo.t_user where username = #{username};
    </delete>

    <insert id="insertUser">
        insert into demo.t_user(username, password)
        values(#{username}, #{password});
    </insert>

</mapper>
